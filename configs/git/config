[alias]
    log = log --graph
    branch = branch -a
    signAll = rebase --exec 'git commit --amend --no-edit -n -S' -i --root
    rr = rebase -i --root # Rebase from root
    cli = restore --staged . # Clear index (staged), unstage everything
    t = tag
    c = checkout
    ck = checkout
    mt = mergetool # Launch mergetool
